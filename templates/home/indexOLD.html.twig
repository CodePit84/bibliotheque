{% extends "base.html.twig" %}

{% block title %}La Bibliothèque - Accueil{% endblock %}

{% block body %}

<div class="container mt-4">

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning mt-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="jumbotron">
        <h1 class="display-4">Bienvenue sur La Bibliothèque !</h1>
        <p class="lead">Gestion des livres et des emprunts.</p>

        <div class="d-flex justify-content-center">
            <section class="w-50">
                <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item">
                            <img src="images/image3.jpg" class="d-block w-100" alt="photo homme cherche livre">
                        </div>
                        <div class="carousel-item">
                            <img src="images/image4.jpg" class="d-block w-100" alt="photo salle d'étude">
                        </div>
                        <div class="carousel-item active">
                            <img src="images/image5.jpg" class="d-block w-100" alt="photo homme devant bibliothèque">
                        </div>
                        <div class="carousel-item active">
                            <img src="images/image9.jpg" class="d-block w-100" alt="photo salle bibliothèque">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                </section>
        </div>
    
        {% if app.user %}
        <hr class="my-4">
        <p>Accédez aux paramètres de votre compte.</p>
        <a class="btn btn-success btn-lg" href="{{ path('app_logout') }}" role="button">Déconnexion</a>
        {% else %}
        <hr class="my-4">
        <p>Pour commencer, rendez-vous sur la page d'inscription ou connectez-vous.</p>
        <a class="btn btn-primary btn-lg" href="{{ path('app_registration') }}" role="button">Inscription</a>
        <a class="btn btn-success btn-lg" href="{{ path('app_login') }}" role="button">Connexion</a>
        {% endif %}
    </div>
</div>



{# <div class="d-flex"> #}
<div class="justify-content-center fixed-bottom row align-items-end">
<div class="sticky-md-bottom">
    <footer class="text-center text-lg-start bg-light text-muted mt-4">
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            © {{ 'now'|date ('Y') }} Copyright:
            <a class="text-reset fw-bold" href="https://github.com/CodePit84">Peter Caillat</a>
        </div>
    </footer>
</div>
</div>
{% endblock %}