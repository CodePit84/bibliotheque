{% extends 'base.html.twig' %}

{% block title %}Ajout d'un exemplaire{% endblock %}

{% block body %}
<section class="container">
    <div class="row mt-4">
        <div class="col">
            <h1 class="mb-3">Ajout d'un exemplaire</h1>

            {# {{ dump(app) }} #}

            {{ form_start(copyForm) }}

                {{ form_row(copyForm.reference) }}
                {{ form_row(copyForm.book, { 'label': 'Livre' }) }}
                {{ form_row(copyForm.numberOfCopies) }}
                    
                <button type="submit" class="btn btn-primary btn-lg my-3">Enregistrer</button>
            {{ form_end(copyForm) }}        
        </div>
    </div>
</section>
{% endblock %}

{# Block select2 pour modifier mes formulaires de select #}
{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('.select2').select2( {
            theme: 'bootstrap-5'
            } );
        });
    </script>
{% endblock %}